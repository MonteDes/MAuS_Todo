<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:descendantFocusability="blocksDescendants">


    <TextView
        android:textColor="@color/black"
        android:textSize="19sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/todo_name_mainView"
        android:layout_alignBottom="@+id/important_button"
        android:layout_toStartOf="@+id/checkBox_done"
        android:layout_toEndOf="@id/important_button"
        android:gravity="center_vertical"/>

    <Button
        android:background="@mipmap/favorite_false"
        android:clickable="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/important_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <CheckBox
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox_done"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/todo_name_mainView"/>


</RelativeLayout>
